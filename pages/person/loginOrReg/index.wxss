/* pages/person/register/index.wxss */

/* 弹窗 */
@import "../../templates/loginModal/loginModal.wxss";

.loginTitle {
  display: flex;
  flex-direction: row;
  width: 100%; 
  height: 130rpx;
  top: 0rpx;
  z-index: 1;
}
.radio1{
  padding-left: 20rpx;
}

.select {
  font-size: 35rpx;
  color: rgb(51, 165, 38);
  width: 50%;
  text-align: center;
  height: 45px;
  line-height: 45px;
  border-bottom: 5rpx solid  rgb(51, 165, 38);
}

.default {
  font-size: 35rpx;
  margin: 0 auto;
  padding: 15px;
}

.hr {
  border: lpx solid#cccccc;
  opacity: 0.2;
}
/* 注册 */
.section {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #dbdbdb;
  background: #fff;
}
.section .section_title {
  color: #1a1a1a;
  padding-right: 36rpx;
  width: 30%;
}
.section .section_hd {
  width: 45%;

}
.section .section_ftError {
  width: 25%;
   font-size: 10px;
   color: red;
   text-align: right;
}
.section .section_ft {

}
.section .btn {
  padding: 15rpx 10rpx;
  border: 1px solid #000000;
  -moz-border-radius: 5rpx;
  /* Firefox */
  -webkit-border-radius: 5rpx;
  /* Safari 和 Chrome */
  border-radius: 5rpx;
  /* Opera 10.5+, 以及使用了IE-CSS3的IE浏览器 */
  color: #000000;
}
.section .send_code {
  margin-left: 40rpx;
}
.btn_comfire {
  margin-top: 64rpx;
  padding: 0 24rpx;
}
.code {
  width: 300rpx;
}
/* 注册 */
.methods {
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
  left: 15px;
  right: 0;
}

