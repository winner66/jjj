/* pages/dynamic/dynamic-menu.wxss */
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result .weui-cell__bd{
  padding: 2px 0 2px 20px;
  color: #666;
}
.searchbar-result:before{
    display: none;
}

.swiper-container{
  position: relative;
}
.swiper-container .swiper{
  height: 350rpx;}

.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
}
.recommend {
  display: flex;
  flex-wrap: wrap;
  margin-top: 5rpx;
  padding-bottom: 5rpx;
  border-bottom: 16rpx solid #eee;
  /* background-color: #a8f4b3; */
  background-color: #e2f6f8;
}

.recommend-item {
  /* flex: 1; */
  text-align: center;
  width:33%;
}

.recommend-item  view image {
  width: 80rpx;
  height: 80rpx;
  /* border-radius:10rpx; */
  margin:5rpx auto;
  /* border-radius:50% */
}

.recommend-item view {
  font-size: 30rpx;
  color: #555;
  margin-top: 5rpx;
}
.title{
  display: flex;
  margin-top:8px;
  margin-bottom:3px;
  padding-left:12px;
  padding-right:12px;
  /* height: 140rpx; */
  color:rgba(0,0,0,.5);
  font-size:14px;
  background: #e2f6f8;
}
.left{
  flex: 1;
  text-align: left;
}
.right{
  flex: 1;
  text-align: right;
  font-size: 12px;
}


.weui-cell__ft{
  font-size: 12px;
}

.loading{  
  padding: 10rpx;  
  text-align: center;  
 }  
 .loading:before{  
   display: inline-block;  
   margin-right: 5rpx;  
   vertical-align: middle;  
   content: '';  
   width: 60rpx;  
  height: 60rpx;  
  background: url(../../assets/images/common/loadding.gif) no-repeat;  
   background-size: contain;  
  animation: rotate 1s linear infinite;  
 }  
 .loading.complete:before{  
   display: none;  
 }