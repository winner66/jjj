/* 弹窗 */
@import "../../assets/style/font.wxss";

@import "../templates/loginModal/loginModal.wxss";
.container{
  height: 1500rpx;
}
.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: rgb(163, 167, 163);
  color: #666;
}
.container .search-left{
  flex: 8;
  background: rgb(255, 255, 255);
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: rgb(85, 86, 87);
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}

.mylabel {
    display: inline-block;
    height: 35rpx;
    line-height: 30rpx;
    padding: 10 15rpx;
    margin: 0 8rpx;
    font-family: PingFangSC;
    border-radius: 2px;
    vertical-align: middle;
    overflow: hidden;
    background: rgb(215, 235, 196);
    color: rgb(144, 148, 144);

    
  }
.label_text{
  
  border: 2px;
  font-size: 18rpx;
}
/* 111 */
.search_read_only .search_content {
  width: 100%;
}
.classify {
  display: flex;
  position: relative;
}
.classify .classify_catetory {
  width: 150rpx;
  position: relative;
  z-index: 1;
}
.classify .classify_catetory .name {
  text-align: center;
  height: 150rpx;
  line-height: 150rpx;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;  
}
.classify .classify_catetory .active {
  border-left: 6rpx solid #ff6a3c;
  background: #fff;
  color: #ff6a3c;
}
.classify .classify_detail {
  position: relative;
  z-index: 80;
  background: #fff;
  padding: 15px 10px 10px 30px;
}
