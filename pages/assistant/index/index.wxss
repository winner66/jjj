.item{
  display: flex;  
  border-bottom:  3rpx solid #efefef;
  background:#fff;
  height: 250rpx;

    /* margin-bottom: 1em; */
    /* padding: 1em 0em 0.5em 0em; */
}

.item .left{
  display: flex;  
  flex-direction: column;
  flex: 1;
  /* width: 80%; */
}
.item .left .title { 
width: 100%;
font-size: 36rpx;
text-align: left;
overflow: hidden;
white-space: normal;
text-overflow: ellipsis; 
display: -webkit-box;
-webkit-box-orient:vertical;
-webkit-line-clamp:2;
justify-content: center;
margin-top: 20rpx;
margin-bottom: 18rpx;
margin-left: 24rpx;
padding: 6rpx;
}
.item .left .details{
height: 40rpx;
font-size: 25rpx;
text-align: left;
color: gray;
/* margin-top: 10px; */
margin-left: 24rpx;
}
.item .left .details-left{
  float: left;
}
.item .left .sell{
  float: right;
height: 40rpx;
font-size: 25rpx;
color:red;
/* margin-top: 10px; */
}
.item .img{
  /* width: 20%; */
  height: 200rpx;
  width: 300rpx;
  margin-top: 8rpx;
  margin-bottom: 4rpx;   
  border-radius:10rpx;
}

.loading{  
  padding: 10rpx;  
  text-align: center;  
 }  
 .loading:before{  
   display: inline-block;  
   margin-right: 5rpx;  
   vertical-align: middle;  
   content: '';  
   width: 60rpx;  
  height: 60rpx;  
  /* background: url(../../../assets/images/common/loadding.gif) no-repeat;   */
   background-size: contain;  
  animation: rotate 1s linear infinite;  
 }  
 .loading.complete:before{  
   display: none;  
 }