/* pages/tupai/list/index.wxss */


.item{ 
  border:  3rpx solid #b2b2b2;
  background:#77ac98;
  height: 200rpx;
  margin-bottom: 1em;
    /* padding: 1em 0em 0.5em 0em; */
    margin:0 10px 10px 10px;
    border-radius: 10rpx;
}

.item .left{
  display: flex;  
  flex-direction: column;
  float: left;
  /* width: 80%; */

}
.item .left .title { 
height: 80rpx;
font-size: 36rpx;
text-align: left;
font-weight: bold;
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis; 
justify-content: center;
margin-top: 20rpx;

margin-bottom: 18rpx;
margin-left: 24rpx;
padding: 6rpx;
}
.item .left .time{
height: 40rpx;
font-size: 25rpx;
text-align: left;
color: gray;
/* margin-top: 10px; */
margin-bottom: 14rpx;
margin-left: 24rpx;
}
.item .img{
  height: 150rpx;
  width: 150rpx;
  float: right;
  margin: 20rpx 20rpx 0 0; 
  border-radius:10rpx;
  background: #fff;
}
.item .img .img{ 
  /* width: 20%; */
  margin: 0;
}


.news-list .ul .li {
  padding: 5px;
  border-bottom: 1px solid #eee;
}

.news-list .news-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-list .news-item .img {
  width: 100px;
  height: 70px;
  margin-right: 10px;
  flex: 1;
}

.news-list .news-item .content {
  box-sizing: border-box;
  width: 250px;
  height: 70px;
  padding: 5px;
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-list .news-item .content .content-title {
  font-size: 14px;
}

.news-list .news-item .content .content-info {
  display: flex;
  justify-content: space-between;
  width: 100%;
  color: #26a2ff;
  font-size: 12px;
}

.loading{  
  padding: 10rpx;  
  text-align: center;  
 }  
 .loading:before{  
   display: inline-block;  
   margin-right: 5rpx;  
   vertical-align: middle;  
   content: '';  
   width: 60rpx;  
  height: 60rpx;  
  /* background: url(../../assets/images/common/loadding.gif) no-repeat;   */
   background-size: contain;  
  animation: rotate 1s linear infinite;  
 }  
 .loading.complete:before{  
   display: none;  
 }
